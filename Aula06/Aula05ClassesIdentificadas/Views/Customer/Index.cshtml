@model List<Modelo.Customer>

<a asp-action="Create" asp-controller="Customer" class="btn btn-light">
	Novo Customer
</a>

@if (Model.Count > 0)
{
	<table class=" table table-striped table-bordered table-hover">
		<thead class="table-dark">
			<tr>
				<th>Id</th>
				<th>Nome</th>
				<th>Excluir</th>
				<th>Editar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Modelo.Customer customer in Model)
			{
				<tr>
					<td>@customer.Id</td>
					<td>@customer.Name</td>
					<td>
						<a asp-action="Delete" asp-controller="Customer"
						   asp-route-id="@customer.Id"
						   title="Excluir Customer @customer.Name">
							<i class="fa-solid fa-trash-can" style="color: #fa0000;"></i>
						</a>
					</td>
					<td>
						<a asp-action="Update" asp-controller="Customer"
						   asp-route-id="@customer.Id"
						   title="Atualizar Customer @customer.Name">
							<i class="fa fa-pencil" aria-hidden="true" style="color: #fa0000;"></i>
						</a>
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div>
		Não existem registros de Customer
	</div>
}

<a asp-action="ExportDelimitatedFile" asp-controller="Customer" class="btn btn-light">
	Exportar Delimitados
</a>

<a asp-action="ExportFixedFile" asp-controller="Customer" class="btn btn-light">
	Exportar Fixos
</a>

<a asp-action="ImportDelimitatedFile" asp-controller="Customer" class="btn btn-secondary">
	Importar Delimitados
</a>