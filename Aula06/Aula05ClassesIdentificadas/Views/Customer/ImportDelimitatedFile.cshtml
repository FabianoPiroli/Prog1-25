@{
    ViewData["Title"] = "Importar Arquivo Delimitado";
}

<h2>Importar Arquivo Delimitado de Clientes</h2>

<form asp-action="ImportDelimitatedFile" asp-controller="Customer" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="file">Selecione o arquivo delimitado:</label>
        <input type="file" name="file" id="file" class="form-control" required />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Importar</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}
