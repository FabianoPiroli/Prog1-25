@model Aula05ClassesIdentificadas.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Cadastro de Pedido</h1>

    <div class="container">

        <form id="formOrder"
        method="post"
        asp-action="Create"
        asp-controller="Order">

            <div class="row">
                <div class="form-group">
                    <label asp-for="CustomerId">Cliente:</label>
                    <select asp-for="CustomerId">
                        @foreach (var c in Model.Customers)
                        {
                            <option value="@c.Id">@c.Name</option>
                        }
                    </select>
                </div>
            </div>
            <br />
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th></th>
                        <th>Item</th>
                        <th>Quantidade</th>
                        <th>Valor</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach(var item in Model.SelectedItems)
                    {
                        <tr>
                            <td>
                                <input type="checkbox"
                                name="SelectedItems[@i].IsSelected"
                                value="true"
                                @(item.IsSelected ? "checked" : "") />
                            </td>
                            <td>@item.OrderItem.Product.ProductName</td>
                            <td>
                                <input type="number"
                                name="SelectedItems[@i].OrderItem.Quantity"
                                value="@item.OrderItem.Quantity"
                                step="1" />
                            </td>
                            <td>
                                <input type="number"
                                name="SelectedItems[@i].OrderItem.PurchasePrice"
                                value="@item.OrderItem.PurchasePrice"
                                step="0.01" />
                            </td>
                        </tr>
                        i++;
                    }
                </tbody>
            </table>
            <button id="btnOrder"
                    type="submit"
                    class="btn btn-primary"
                    value="Cadastrar">
                Cadastrar
            </button>

        </form>
    </div>
</div>
