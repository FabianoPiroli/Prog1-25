@model Modelo.Order

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Cadastro de Ordem</h1>

    <div class="container">

        <form id="formCustomer" 
                method="post" 
                asp-action="Create" 
                asp-controller="Order">

        <div class="row">
            <div class="form-group">
                <label asp-for="@Model.Customer">Nome do Cliente:</label>
                <input type="text" class = "form-control" asp-for="@Model.Customer" />
            </div>
        </div>

        <button id="btnOrder"
                type="submit" 
                class="btn btn-primary"
                value="Cadastrar">
                Cadastrar
        </button>

        </form>
    </div>
</div>
