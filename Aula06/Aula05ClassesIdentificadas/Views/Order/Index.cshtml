@model List<Modelo.Order>

<a asp-action="Create" asp-controller="Order" class="btn btn-light">
	Novo Order
</a>

@if(Model.Count > 0)
{
	<table>
		<thead>
			<tr>
				<th>Id</th>
				<th>Nome</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Modelo.Order order in Model)
			{
				<tr>
					<td>@order.Id</td>
					<td>@order.Customer</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div>
		Não existem registros de Order
	</div>
}
