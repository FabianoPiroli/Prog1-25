@model List<Modelo.Product>

<a asp-action="Create" asp-controller="Product" class="btn btn-light">
	Novo Product
</a>

@if(Model.Count > 0)
{
	<table class=" table table-striped table-bordered table-hover">
		<thead class="table-dark">
			<tr>
				<th>Id</th>
				<th>Nome</th>
				<th>Excluir</th>
				<th>Editar</th>
			</tr>
		</thead>
		<tbody>
			@foreach (Modelo.Product product in Model)
			{
				<tr>
					<td>@product.Id</td>
					<td>@product.ProductName</td>
					<td>
						<a asp-action="Delete" asp-controller="Product"
						   asp-route-id="@product.Id"
						   title="Excluir Product @product.ProductName">
							<i class="fa-solid fa-trash-can" style="color: #fa0000;"></i>
						</a>
					</td>
					<td>
						<a asp-action="Update" asp-controller="Product"
						   asp-route-id="@product.Id"
						   title="Atualizar Product @product.ProductName">
							<i class="fa fa-pencil" aria-hidden="true" style="color: #fa0000;"></i>
						</a>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<div>
		Não existem registros de Product
	</div>
}

<a asp-action="ExportDelimitatedFile" asp-controller="Product" class="btn btn-light">
	Exportar Delimitados
</a>

<a asp-action="ExportFixedFile" asp-controller="Product" class="btn btn-light">
	Exportar fixos
</a>

<a asp-action="ImportDelimitatedFile" asp-controller="Product" class="btn btn-secondary">
    Importar Delimitados
</a>
